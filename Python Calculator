num1 = float(input("أدخل الرقم الأول: "))
operation = input("اختر العملية (+ أو - أو * أو /): ")
num2 = float(input("أدخل الرقم الثاني: "))

if operation == "+":
    result = num1 + num2
elif operation == "-":
    result = num1 - num2
elif operation == "*":
    result = num1 * num2
elif operation == "/":
    if num2 != 0:
        result = num1 / num2
    else:
        result = "لا يمكن القسمة على صفر"
else:
    result = "عملية غير معروفة"

print("النتيجة:", result)
